{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "providers/**/*.ts",
    "providers/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    "scripts/**/*.ts",
    "App.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
